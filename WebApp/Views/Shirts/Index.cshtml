@using WebApp.Model
@model List<Shirt>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ps-0">
            <h2 class="text-primary">Shirt List</h2>
        </div>
        <div class="col-6 text-end pe-0">
            <a asp-controller="Shirts" asp-action="CreateShirt" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create new Shirt
            </a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered" style="width: 100%">
    <thead>
        <tr>
            <td>Brand</td>
            <td>Gender</td>
            <td>Color</td>
            <td>Size</td>
            <td>Price</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var shirt in Model)
        {
            <tr>
                <td>@shirt.Brand</td>
                <td>@shirt.Gender</td>
                <td>@shirt.Color</td>
                <td>@shirt.Size</td>
                <td>@(shirt.Price.HasValue ? shirt.Price.Value.ToString("c") : "")</td>
                <td>
                    <a class="btn btn-link" asp-action="UpdateShirt" asp-controller="Shirts" asp-route-shirtId="@shirt.ShirtId">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>